{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "isolatedModules": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.json",
    "src/**/*.svelte",
    "src/**/*.ts"
  ],
  "moduleResolution": "node",
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}