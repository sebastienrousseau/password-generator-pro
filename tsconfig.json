{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["webapp"],
  "moduleResolution": "node",
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
