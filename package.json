{
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tauri-apps/api": "^1.5.3",
    "@tauri-apps/cli": "^1.5.9",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^12.10.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-rust": "^0.1.9",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-preprocess": "^5.1.3",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.1.0"
  },
  "name": "password-generator-pro",
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write \"**/src-web/*.{ts,json}\""
    }
  },
  "private": true,
  "scripts": {
    "build:web": "vite build",
    "build": "tauri build",
    "cargo:clean": "cd src-tauri && cargo clean",
    "cargo:docs": "cd src-tauri && cargo doc --all --no-deps",
    "cargo:test": "cd src-tauri && cargo test",
    "cargo:tree": "cd src-tauri && cargo tree --charset ascii > tree.txt",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "clean": "rm -rf node_modules pnpm-lock.yaml src-tauri/target src-tauri/Cargo.lock && pnpm i",
    "coverage:rust": "cargo tarpaulin --root=src-tauri --out Xml",
    "coverage:ts": "vitest run --dom --coverage",
    "coverage": "pnpm run coverage:ts && pnpm run coverage:rust",
    "dev:web": "vite",
    "dev": "RUST_BACKTRACE=full tauri dev",
    "appimage": "open src-tauri/target/release/bundle/appimage",
    "deb": "open src-tauri/target/release/bundle/deb",
    "dmg": "open src-tauri/target/release/bundle/dmg",
    "info": "tauri info",
    "lint:rust": "cd src-tauri && cargo fmt && cargo clippy --workspace --all-features --all-targets -- --deny warnings --deny deprecated",
    "lint:web": "eslint --fix \"**/src-web/*.{ts,json,html}\"",
    "lint": "pnpm run prettier && pnpm run lint:rust && pnpm run lint:web",
    "package": "tauri package",
    "postinstall": "husky install",
    "pre-commit": "pnpm run lint && pnpm run test:coverage && pnpm run cargo:clippy && pnpm run cargo:test && cd src-tauri && cargo build --all-features",
    "prettier": "prettier --write \"**/src-web/*.{ts,json}\"",
    "preview": "vite preview",
    "start": "vite",
    "tauri": "tauri",
    "test:coverage": "vitest run --coverage",
    "test:rust": "cd src-tauri && cargo test",
    "test:ts": "vitest run --dom",
    "test:watch": "vitest",
    "test": "pnpm run test:rust && pnpm run test:ts && pnpm run test:coverage",
    "vite:build": "vite build",
    "vite:preview": "vite preview"
  },
  "type": "module",
  "version": "0.0.7"
}